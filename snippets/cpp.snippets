## Iteration
# for i
snippet fori
	for (int ${1:i} = 0; $1 < ${2:count}; $1${3:++})
	{
		${4}
	}

# foreach
snippet fore
	for (${1:auto} ${2:i} : ${3:container})
	{
		${4}
	}
# iterator
snippet iter
	${1:Type}::${2:const_iterator} ${3:it} = ${4:container}.begin();
	for (; $3 != $4.end(); ++$3)
	{
		${5}
	}

# auto iterator
snippet itera
	for (auto ${1:i} = ${2:container}.begin(); $1 != $2.end(); ++$1)
	{
		${3:std::cout << *$1 << std::endl;}
	}
